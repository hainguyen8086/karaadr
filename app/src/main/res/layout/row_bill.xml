<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:background="@drawable/square_button_white2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_margin="3dp"
        android:padding="3dp"
        android:id="@+id/bill_id"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/id_24"
        android:text="BillID:" />
    <TextView
        android:layout_margin="3dp"
        android:padding="3dp"
        android:id="@+id/bookingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/booking_24"
        android:gravity="center"
        android:layout_toEndOf="@+id/bill_id"
        android:text="BookingID:" />
    <TextView
        android:layout_margin="3dp"
        android:padding="3dp"
        android:id="@+id/time_using"
        android:layout_width="wrap_content"
        android:layout_below="@+id/bill_id"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableLeft="@drawable/hour_24"
        android:text="time booked" />




</RelativeLayout>