<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/square_button_white2"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/barcode_24"
        android:gravity="center"
        android:text=" ID " />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        android:layout_toEndOf="@+id/item_id"
        android:text="Ten san pham" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/item_name"
        android:layout_toEndOf="@+id/item_id"
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.000 d " />

    <TextView
        android:id="@+id/item_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/lock_36"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:text="LOCK" />

    <TextView
        android:id="@+id/item_unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:drawableLeft="@drawable/unlock_36"
        android:gravity="center"
        android:text="UNLOCK" />


</RelativeLayout>